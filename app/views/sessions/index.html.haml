= stylesheet_link_tag "sessions.index", "data-turbo-track": "reload"
.sessions_index.container
  .row.justify-content-center
    .col-md-6.treed_form
      %h1.text-center Memorie's
      =form_with(method: 'post', url: sessions_create_path) do
        .form-group
          %label(for="username") Username:
          %input.form-control(type="text" name="username" required)

        .form-group
          %label(for="password") Password:
          %input.form-control(type="password" name="password" required)

        %button.btn.btn-primary.float-end(type="submit") Login

